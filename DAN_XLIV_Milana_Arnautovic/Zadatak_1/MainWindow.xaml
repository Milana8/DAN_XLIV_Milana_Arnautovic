<Window x:Class="Zadatak_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Zadatak_1"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="450">
    <Border  CornerRadius="20" Margin="20">
        <StackPanel Margin="15">
            <Label Content="Login" Foreground="Black" FontSize="25" HorizontalAlignment="Center"/>
            <Separator></Separator>
            <Label Content="Username" Foreground="Black" Margin="0 -5"/>
            <TextBox Text="{Binding UserName, UpdateSourceTrigger=LostFocus, ValidatesOnDataErrors=True}"  Foreground="Black" FontSize="12" Margin="0,10,-0.2,10" Height="34"/>
            <Label Content="Password" Foreground="Black" Margin="0 10"/>
            <PasswordBox Name="passwordBox"  Foreground="Black" FontSize="12" Margin="0,-10,-0.2,-10" Height="35"/>
            <Button Name="btnLogin" Content="Login" Margin="111,25,98.8,25" Background="Gray" Foreground="White" FontSize="18"/>
            <Button Name="btnCancel" Content="Cancel" Margin="111,25,98.8,25" Background="Gray" Foreground="White" FontSize="18"/>

        </StackPanel>
    </Border>


</Window>